---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const {
  size = 'lg',
  class: className
} = Astro.props;

const sizes = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  xl: 'max-w-[96rem]'
};

const classes = [
  'mx-auto px-4 sm:px-6 lg:px-8',
  sizes[size],
  className
].join(' ');
---

<div class={classes}>
  <slot />
</div>
