---
export interface Props {
  image?: string;
  fallback?: string;
  alt?: string;
  size?: number;
}

const { image, fallback = "?", alt = "User Avatar", size = 40 } = Astro.props;
---

<div class="avatar" style={`width: ${size}px; height: ${size}px;`}>
  {image ? (
    <img src={image} alt={alt} class="avatar-image" />
  ) : (
    <div class="avatar-fallback">{fallback}</div>
  )}
</div>

<style>
.avatar {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  overflow: hidden;
  background-color: #e2e8f0;
  color: #475569;
  font-size: 14px;
  font-weight: bold;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-fallback {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
</style>