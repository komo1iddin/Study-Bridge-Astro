---
export interface Props {
  class?: string;
  hover?: boolean;
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const { 
  class: className,
  hover = false,
  padding = 'md'
} = Astro.props;

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = [
  'bg-white rounded-lg shadow-sm',
  hover && 'transition-shadow hover:shadow-md',
  paddings[padding],
  className
].join(' ');
---

<div class={classes}>
  <slot />
</div>
