---
import { BookOpen } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  iconName?: string; // Опциональное имя иконки для определения, какую иконку использовать
  variant?: 'default' | 'bordered' | 'minimal';
}

const { 
  title, 
  description, 
  iconName = 'book-open', // По умолчанию используем BookOpen
  variant = 'default'
} = Astro.props;

const variants = {
  default: "bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow",
  bordered: "border-2 border-gray-100 rounded-xl p-6 hover:border-primary-100 transition-all",
  minimal: "p-6 hover:bg-gray-50 rounded-xl transition-all"
};

// Здесь вы можете добавить больше иконок по мере необходимости
// В данном примере используется только BookOpen как иконка по умолчанию
---

<div class={variants[variant]}>
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary-100">
        <BookOpen class="w-6 h-6 text-primary-600" />
      </div>
    </div>
    <div class="ml-4">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        {title}
      </h3>
      <p class="text-gray-600">
        {description}
      </p>
    </div>
  </div>
</div>
