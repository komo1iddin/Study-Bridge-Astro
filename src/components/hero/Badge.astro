---
import { Calendar } from 'lucide-astro';

interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="badge mb-6">
  <span class="badge-icon">
    <Calendar class="icon animate-bounce-gentle w-4 h-4" />
  </span>
  <span class="badge-text">{text}</span>
</div>

<style>
.badge {
  @apply inline-flex items-center gap-3 bg-white/95 backdrop-blur-sm rounded-full pl-1 pr-4 py-1 shadow-lg border border-blue-100 animate-badge hover:border-blue-200 transition-colors;
}

.badge-icon {
  @apply flex h-8 w-8 items-center justify-center rounded-full bg-blue-600 text-white;
}

.badge-text {
  @apply text-base font-medium bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent;
  position: relative;
  white-space: nowrap;
  overflow: hidden;
  animation: typing 3.5s steps(40, end) infinite,
             blink-caret 0.75s step-end infinite;
  border-right: 0.15em solid #2463eb;
}
</style>