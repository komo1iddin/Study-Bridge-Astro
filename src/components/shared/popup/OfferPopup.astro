---
// OfferPopup.astro
---

<div id="offerPopup" class="popup-overlay fixed inset-0 bg-gray-900/50 z-50 flex items-center justify-center p-4">
  <div class="popup-content bg-white rounded-xl shadow-lg w-full max-w-md mx-auto relative overflow-y-auto max-h-[90vh]">
    <!-- Кнопка закрытия -->
    <button id="closePopup" class="popup-close absolute top-3 right-3 sm:top-4 sm:right-4 text-gray-500 hover:text-gray-700 transition-transform duration-300 z-10 bg-white/80 rounded-full p-1">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    
    <!-- Содержимое попапа -->
    <div class="p-4 sm:p-6">
      <div class="text-center mb-4 sm:mb-6">
        <span class="inline-block px-3 py-1 sm:px-4 sm:py-1 bg-primary-50 text-primary-700 rounded-full text-xs sm:text-sm font-medium mb-2 sm:mb-3">
          Специальное предложение
        </span>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-1 sm:mb-2">
          Получите бесплатную консультацию
        </h3>
        <p class="text-sm sm:text-base text-gray-600">
          Оставьте заявку сейчас и получите персональную консультацию по образованию за рубежом
        </p>
      </div>
      
      <!-- Форма -->
      <form class="space-y-3 sm:space-y-4">
        <div>
          <label for="name" class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Имя</label>
          <input type="text" id="name" name="name" class="w-full px-3 py-2 sm:px-4 sm:py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all text-sm sm:text-base">
        </div>
        <div>
          <label for="phone" class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Телефон</label>
          <input type="tel" id="phone" name="phone" class="w-full px-3 py-2 sm:px-4 sm:py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all text-sm sm:text-base">
        </div>
        <div>
          <label for="email" class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" id="email" name="email" class="w-full px-3 py-2 sm:px-4 sm:py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all text-sm sm:text-base">
        </div>
        
        <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 sm:px-6 sm:py-3 rounded-lg font-medium transition-all duration-300 hover:shadow-lg hover:-translate-y-1 text-sm sm:text-base">
          Получить консультацию
        </button>
      </form>
      
      <p class="text-xxs sm:text-xs text-gray-500 mt-3 sm:mt-4 text-center">
        Нажимая на кнопку, вы соглашаетесь с нашей политикой конфиденциальности
      </p>
    </div>
  </div>
</div>

<style>
  .popup-overlay {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  
  .popup-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  .popup-content {
    transform: translateY(20px);
    transition: transform 0.4s ease;
  }
  
  .popup-overlay.active .popup-content {
    transform: translateY(0);
  }
  
  .popup-close:hover {
    transform: rotate(90deg);
  }
  
  /* Добавляем стиль для очень маленького текста */
  .text-xxs {
    font-size: 0.65rem;
    line-height: 1rem;
  }
  
  /* Предотвращаем скролл на основной странице при открытом попапе */
  :global(body.popup-active) {
    overflow: hidden;
  }
  
  /* Медиа-запрос для очень маленьких экранов */
  @media (max-width: 360px) {
    .popup-content {
      margin: 0 8px;
    }
  }
</style>

<script>
  // Функция для отображения попапа при прокрутке
  document.addEventListener('DOMContentLoaded', function() {
    const popup = document.getElementById('offerPopup');
    const closeBtn = document.getElementById('closePopup');
    let popupShown = false;
    
    // Функция для определения типа устройства
    function isMobileDevice() {
      return (window.innerWidth <= 768) || 
             ('ontouchstart' in window) || 
             (navigator.maxTouchPoints > 0) || 
             (navigator.msMaxTouchPoints > 0);
    }
    
    // Функция для показа попапа
    function showPopup() {
      if (!popupShown) {
        popup.classList.add('active');
        document.body.classList.add('popup-active');
        popupShown = true;
        
        // Удаляем сохранение в localStorage, чтобы попап появлялся при каждой загрузке
        // localStorage.setItem('popupShown', 'true');
        // localStorage.setItem('popupShownDate', new Date().toISOString());
      }
    }
    
    // Функция для скрытия попапа
    function hidePopup() {
      popup.classList.remove('active');
      document.body.classList.remove('popup-active');
    }
    
    // Показываем попап при прокрутке на определенную высоту
    window.addEventListener('scroll', function() {
      // Показываем попап, когда пользователь прокрутил определенный процент высоты страницы
      const scrollHeight = window.scrollY;
      const pageHeight = document.body.scrollHeight;
      const viewportHeight = window.innerHeight;
      const scrollPercentage = (scrollHeight / (pageHeight - viewportHeight)) * 100;
      
      // Для мобильных устройств можно установить меньший процент прокрутки
      const threshold = isMobileDevice() ? 20 : 30;
      
      if (scrollPercentage > threshold && !popupShown) {
        showPopup();
      }
    });
    
    // Для мобильных устройств также добавляем таймер
    if (isMobileDevice()) {
      // Показываем попап через 15 секунд после загрузки страницы
      setTimeout(function() {
        if (!popupShown) {
          showPopup();
        }
      }, 15000); // 15 секунд
    } else {
      // Для десктопов можно установить другое время
      setTimeout(function() {
        if (!popupShown) {
          showPopup();
        }
      }, 30000); // 30 секунд
    }
    
    // Закрытие попапа
    closeBtn.addEventListener('click', function() {
      hidePopup();
    });
    
    // Закрытие попапа при клике вне его области
    popup.addEventListener('click', function(e) {
      if (e.target === popup) {
        hidePopup();
      }
    });
    
    // Удалено: проверка localStorage
    // Теперь попап будет показываться при каждой загрузке страницы
    
    // Обработка отправки формы
    const form = popup.querySelector('form');
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Здесь можно добавить код для отправки данных формы
        // Например, через fetch API
        
        // После успешной отправки закрываем попап
        hidePopup();
        
        // Показываем сообщение об успешной отправке
        alert('Спасибо! Ваша заявка отправлена. Мы свяжемся с вами в ближайшее время.');
      });
    }
  });
</script>
