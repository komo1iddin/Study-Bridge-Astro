---
import { Phone } from 'lucide-astro';
import { useTranslations } from '@/i18n/utils';
import type { Lang } from '@/i18n/langUtils';

interface Props {
  lang?: Lang;
  phoneNumber?: string;
}

const { lang = 'uz', phoneNumber = "+998 90 123 45 67" } = Astro.props;
const t = useTranslations(lang);
---

<div class="px-4 sm:px-6 lg:px-8 mt-20 text-center bg-gradient-to-r from-primary-600 to-primary-700 rounded-2xl p-12 shadow-xl transform hover:scale-[1.02] transition-all duration-300">
  <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
    Hoziroq qo'ng'iroq qiling va bepul maslahat oling
  </h2>
  <p class="text-primary-100 text-lg mb-8 max-w-2xl mx-auto">
    Xitoyda o'qish orqali kelajagingizni bugundan boshlab o'zgartiring. Biz sizga yordam berishga tayyormiz!
  </p>
  <div class="flex justify-center">
    <a 
      href={`tel:${phoneNumber.replace(/\s+/g, '')}`}
      class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-bold rounded-full hover:bg-primary-50 transition-all duration-300 shadow-lg hover:shadow-xl hover:transform hover:-translate-y-1"
    >
    <Phone class="ml-2 w-5 h-5" />
      Biz bilan bog'laning
    </a>
  </div>
</div>

<style>
  /* Animation for hover effects */
  .hover\:transform:hover {
    transition: all 0.3s ease;
  }
  
  /* Smooth transition for CTA section */
  .hover\:scale-\[1\.02\]:hover {
    transform: scale(1.02);
  }
  
  /* Reduce motion */
  @media (prefers-reduced-motion: reduce) {
    .hover\:transform:hover {
      transition: none;
      animation: none;
      transform: none;
    }
  }
</style>