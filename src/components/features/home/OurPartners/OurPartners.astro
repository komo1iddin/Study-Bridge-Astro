---
import OurPartnersComponent from './OurPartners.svelte';
import { getPartnersTranslations } from '@/i18n/features/home/partners';
import type { Lang } from '@/i18n/langUtils';

interface Props {
  lang?: Lang;
}

const { lang = 'uz' } = Astro.props;

// Get all translations for this component directly using the new system
const translations = getPartnersTranslations(lang);
---

<OurPartnersComponent lang={lang} translations={translations} client:visible />
