---
import SuccessPathComponent from './SuccessPath.svelte';
import { getSuccessPathTranslations } from '@/i18n/features/home/successPath';
import type { Lang } from '@/i18n/langUtils';

interface Props {
  lang?: Lang;
}

const { lang = 'uz' } = Astro.props;

// Get all translations for this component using the new system
const translations = getSuccessPathTranslations(lang);
---

<SuccessPathComponent lang={lang} translations={translations} client:visible />