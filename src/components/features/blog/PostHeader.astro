---
import type { BlogPost } from '@/types/blog';
import { Calendar, Clock, Tag, User } from 'lucide-astro';

interface Props {
  post: BlogPost;
  formattedDate: string;
}

const { post, formattedDate } = Astro.props;
---

<div class="mb-8" data-aos="fade-up">
  <div class="inline-flex items-center px-4 py-1 rounded-full text-sm font-medium bg-primary-50 text-primary-700 mb-4">
    <Tag size={14} class="mr-1.5" />
    {post.category}
  </div>
  
  <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
    {post.title}
  </h1>
  
  <div class="flex flex-wrap items-center text-sm text-gray-600 mb-6">
    <div class="flex items-center mr-6 mb-2">
      <Calendar size={16} class="mr-1.5" />
      <time datetime={post.publishedDate}>
        {formattedDate}
      </time>
    </div>
    
    <div class="flex items-center mr-6 mb-2">
      <Clock size={16} class="mr-1.5" />
      <span>5 min read</span>
    </div>
    
    <div class="flex items-center mb-2">
      <User size={16} class="mr-1.5" />
      <span>{post.author}</span>
    </div>
  </div>
  
  <div class="w-24 h-1 bg-primary-600 mt-6"></div>
</div>
