---
import { ChevronLeft, ChevronRight } from 'lucide-astro';
import type { BlogPost } from '@/types/blog';

interface Props {
  previousPost?: BlogPost;
  nextPost?: BlogPost;
}

const { previousPost, nextPost } = Astro.props;
---

<div class="flex justify-between mt-12 pt-8 border-t border-gray-200">
  {previousPost ? (
    <a 
      href={`/uz/blog/${previousPost.slug}`} 
      class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors duration-300"
    >
      <ChevronLeft size={16} class="mr-1" />
      <span class="line-clamp-1">{previousPost.title}</span>
    </a>
  ) : (
    <a 
      href="/uz/blog" 
      class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors duration-300"
    >
      <ChevronLeft size={16} class="mr-1" />
      Barcha maqolalar
    </a>
  )}
  
  {nextPost && (
    <a 
      href={`/uz/blog/${nextPost.slug}`} 
      class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors duration-300"
    >
      <span class="line-clamp-1">{nextPost.title}</span>
      <ChevronRight size={16} class="ml-1" />
    </a>
  )}
</div>
