---
import type { BlogPost } from '@/types/blog';

interface Props {
  posts: BlogPost[];
}

const { posts } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {posts.map(post => (
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
      <a href={`/uz/blog/${post.slug}`} class="block">
        <div class="aspect-w-16 aspect-h-9">
          <img 
            src={post.image || '/images/posts/placeholder/post.jpeg'} 
            alt={post.title}
            class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
            onerror="this.src='/images/posts/placeholder/post.jpeg'"
          />
        </div>
      </a>
      <div class="p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">
          <a href={`/uz/blog/${post.slug}`} class="hover:text-primary-600 transition-colors duration-300">
            {post.title}
          </a>
        </h3>
        <p class="text-sm text-gray-600 line-clamp-2">{post.excerpt}</p>
      </div>
    </div>
  ))}
</div>
