---
import { BookOpen, Users, Sparkles } from 'lucide-astro';
---

<div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
  <span class="inline-block px-4 py-1 bg-primary-50 text-primary-700 rounded-full text-sm font-medium mb-3">
    Наш блог
  </span>
  <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Bizning blog</h1>
  <p class="text-lg text-gray-600 max-w-2xl mx-auto">Xitoyda ta'lim olish haqida dolzarb yangiliklar va foydali maqolalar</p>
  
  <div class="w-24 h-1 bg-primary-600 mx-auto mt-6 mb-10"></div>
  
  <!-- Stats -->
  <div class="flex flex-wrap justify-center gap-8 mt-10">
    <div class="flex items-center">
      <div class="p-3 bg-primary-50 rounded-full mb-0 group-hover:bg-primary-500 transition-colors duration-300 mr-3">
        <BookOpen size={20} class="text-primary-600" />
      </div>
      <div class="text-left">
        <div class="font-bold text-xl">100+</div>
        <div class="text-sm text-gray-500">Maqolalar</div>
      </div>
    </div>
    
    <div class="flex items-center">
      <div class="p-3 bg-primary-50 rounded-full mb-0 group-hover:bg-primary-500 transition-colors duration-300 mr-3">
        <Users size={20} class="text-primary-600" />
      </div>
      <div class="text-left">
        <div class="font-bold text-xl">5000+</div>
        <div class="text-sm text-gray-500">O'quvchilar</div>
      </div>
    </div>
    
    <div class="flex items-center">
      <div class="p-3 bg-primary-50 rounded-full mb-0 group-hover:bg-primary-500 transition-colors duration-300 mr-3">
        <Sparkles size={20} class="text-primary-600" />
      </div>
      <div class="text-left">
        <div class="font-bold text-xl">10+</div>
        <div class="text-sm text-gray-500">Mualliflar</div>
      </div>
    </div>
  </div>
</div>
