---
import { cn } from "@/lib/utils";

interface Props {
  className?: string;
}

const { className } = Astro.props;
// Import any necessary icons/utilities
---

<header class={cn("w-full animate-fade-in", className)}>
  <div>
    <h1 class="text-3xl font-bold text-blue-800">Study Blog</h1>
    <p class="text-gray-600 mt-1">
      Insights and strategies for academic excellence
    </p>
  </div>
</header>

<style>
  .animate-fade-in {
    animation: fadeIn 0.6s ease-in-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style> 