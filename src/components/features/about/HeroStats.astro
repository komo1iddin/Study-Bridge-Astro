---
interface Props {
  stats: {
    value: string;
    label: string;
  }[];
}

const { stats } = Astro.props;
---

<div class="grid grid-cols-2 gap-5">
  {stats.map((stat, index) => (
    <div 
      class="bg-white/10 backdrop-blur-lg rounded-xl p-6 text-center transition-all duration-300 hover:bg-white/15 hover:transform hover:-translate-y-1" 
      data-aos="zoom-in" 
      data-aos-delay={100 * index}
    >
      <p class="text-4xl font-bold">{stat.value}</p>
      <p class="mt-2 text-sm">{stat.label}</p>
    </div>
  ))}
</div>