---
import Layout from '@/layouts/Layout.astro';
import ExampleForm from '@/components/ui/svelte/ExampleForm.svelte';
import StyleTest from '@/components/ui/svelte/StyleTest.svelte';
import TabsExample from '@/components/ui/svelte/TabsExample.svelte';
import SuccessPathExample from '@/components/features/home/SuccessPath/SuccessPathExample.svelte';
import SuccessPath from '@/components/features/home/SuccessPath/SuccessPath.svelte';
import AccordionExample from '@/components/ui/svelte/AccordionExample.svelte';
import FaqExample from '@/components/ui/svelte/FaqExample.svelte';
import AvatarExample from '@/components/ui/svelte/AvatarExample.svelte';
import SheetExample from '@/components/ui/svelte/SheetExample.svelte';
import SimpleAccordion from '@/components/ui/svelte/SimpleAccordion.svelte';
import DirectAccordion from '@/components/ui/svelte/DirectAccordion.svelte';
import AccordionDebug from '@/components/ui/svelte/AccordionDebug.svelte';
import SimpleAccordionSystem from '@/components/ui/svelte/SimpleAccordionSystem.svelte';
import AccordionFixed from '@/components/ui/svelte/AccordionFixed.svelte';
import AlertExample from '@/components/ui/svelte/AlertExample.svelte';
import SkeletonExample from '@/components/ui/svelte/SkeletonExample.svelte';
import Debug from '@/components/ui/svelte/Debug.svelte';
import SeparatorExample from '@/components/ui/svelte/SeparatorExample.svelte';
import CombinedExample from '@/components/ui/svelte/CombinedExample.svelte';
import BadgeExample from '@/components/ui/svelte/BadgeExample.svelte';
import RadioGroupExample from '@/components/ui/svelte/RadioGroupExample.svelte';

const meta = {
  title: "Svelte Components Test",
  description: "Testing our Svelte UI components"
};
---

<Layout meta={meta}>
  <main class="container mx-auto p-6 max-w-4xl">
    <Debug client:load />
    <h1 class="text-3xl font-bold mb-8 text-center">Svelte Components Test</h1>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Radio Group Example</h2>
      <RadioGroupExample client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Skeleton Example</h2>
      <SkeletonExample client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Alert Example</h2>
      <AlertExample client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Fixed Accordion</h2>
      <AccordionFixed client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Simple Accordion System Test</h2>
      <SimpleAccordionSystem client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Debug Accordion Test</h2>
      <AccordionDebug client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Simple Accordion Test</h2>
      <SimpleAccordion client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Direct Accordion Test</h2>
      <DirectAccordion client:load />
    </div>
    
    <div class="mb-16">
      <h2 class="text-2xl font-semibold mb-4">Full Success Path</h2>
      <SuccessPath lang="uz" client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Success Path Example</h2>
      <SuccessPathExample client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Accordion Example</h2>
      <AccordionExample client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">FAQ Example</h2>
      <FaqExample client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Avatar Example</h2>
      <AvatarExample client:load />
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Sheet Example</h2>
      <SheetExample client:load />
    </div>
    
    <div class="mb-8">
      <StyleTest client:load />
    </div>
    
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Tabs Example</h2>
      <TabsExample client:load />
    </div>
    
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Form Example</h2>
      <ExampleForm client:load />
    </div>
    
    <div class="mb-8 p-4 border rounded-lg">
      <h2 class="text-xl font-semibold mb-4">Separator Example</h2>
      <SeparatorExample client:load />
    </div>
    
    <div class="mb-8 p-4 border rounded-lg bg-white shadow-md">
      <h2 class="text-xl font-semibold mb-4">Combined Components Example</h2>
      <CombinedExample client:load />
    </div>
    
    <div class="mb-8 p-4 border rounded-lg">
      <h2 class="text-xl font-semibold mb-4">Badge Example</h2>
      <BadgeExample client:load />
    </div>
    
    <div class="text-center mt-10">
      <p class="text-muted-foreground">
        This page demonstrates Svelte components working within our Astro site.
      </p>
    </div>
  </main>
</Layout> 