---
import Layout from '@/layouts/Layout.astro';
import SvelteButtonExample from '@/components/tests/svelte/ButtonExample.svelte';
import SvelteAlertExample from '@/components/tests/svelte/AlertExample.svelte';
import SvelteCardExample from '@/components/tests/svelte/CardExample.svelte';
import SvelteFormExample from '@/components/tests/svelte/FormExample.svelte';
import SvelteAccordionSimpleExample from '@/components/tests/svelte/AccordionSimpleExample.svelte';
import SvelteRadioGroupTest from '@/components/ui/svelte/RadioGroupTest.svelte';
import SvelteSwitchExample from '@/components/tests/svelte/SwitchExample.svelte';
import SveltePaginationExample from '@/components/tests/svelte/PaginationExample.svelte';

const meta = {
  title: "Component Test Page",
  description: "Test page for Svelte UI components",
  keywords: ['components', 'test', 'ui', 'svelte']
};
---

<Layout meta={meta}>
  <div class="container mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold mb-8">Svelte Component Test Page</h1>
    
    <div class="grid gap-8">
      <!-- Button Components Test -->
      <section id="buttons" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Buttons</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Buttons</h3>
            <div class="flex flex-wrap gap-4 p-4 border rounded-md bg-gray-50">
              <SvelteButtonExample client:load />
            </div>
          </div>
        </div>
      </section>

      <!-- Alert Components Test -->
      <section id="alerts" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Alerts</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Alerts</h3>
            <div class="flex flex-col gap-4 p-4 border rounded-md bg-gray-50">
              <SvelteAlertExample client:load />
            </div>
          </div>
        </div>
      </section>

      <!-- Accordion Components Test -->
      <section id="accordions" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Accordions</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Accordions</h3>
            <div class="p-4 border rounded-md bg-gray-50">
              <SvelteAccordionSimpleExample client:load />
            </div>
          </div>
        </div>
      </section>

      <!-- RadioGroup Components Test -->
      <section id="radiogroup" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Radio Groups</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Radio Group</h3>
            <div class="p-4 border rounded-md bg-gray-50">
              <SvelteRadioGroupTest client:load />
            </div>
          </div>
        </div>
      </section>

      <!-- Form Components Test -->
      <section id="forms" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Form Elements</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Form Elements</h3>
            <div class="p-4 border rounded-md bg-gray-50">
              <SvelteFormExample client:load />
            </div>
          </div>
        </div>
      </section>

      <!-- Card Components Test -->
      <section id="cards" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Cards</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Cards</h3>
            <div class="p-4 border rounded-md bg-gray-50">
              <SvelteCardExample client:load />
            </div>
          </div>
        </div>
      </section>

      <!-- Switch Components Test -->
      <section id="switches" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Switches</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Switches</h3>
            <div class="p-4 border rounded-md bg-gray-50">
              <SvelteSwitchExample client:load />
            </div>
          </div>
        </div>
      </section>

      <!-- Pagination Components Test -->
      <section id="pagination" class="border rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Pagination</h2>
        <div class="grid grid-cols-1 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Pagination</h3>
            <div class="p-4 border rounded-md bg-gray-50">
              <SveltePaginationExample client:load />
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout> 