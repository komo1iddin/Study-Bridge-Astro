---
import Layout from "@/layouts/Layout.astro";
import MobileNav from "@/components/shared/navigation/Header/MobileNav.svelte";

const currentPath = Astro.url.pathname;

// Added proper meta data
const meta = {
  title: "Test Mobile Navigation",
  description: "Testing page for Svelte mobile navigation component",
  keywords: ["test", "mobile", "navigation"]
};
---

<Layout meta={meta}>
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Test Mobile Navigation Component</h1>
    <p class="mb-8">This page is for testing the Svelte mobile navigation component.</p>
    
    <div class="border p-4 rounded-lg bg-gray-50 max-w-fit">
      <MobileNav client:load currentPath={currentPath} />
    </div>
  </div>
</Layout> 