---
import Layout from '@/layouts/Layout.astro';
import SvelteRadioGroupTest from '@/components/ui/svelte/RadioGroupTest.svelte';

const meta = {
  title: "RadioGroup Test Page",
  description: "Test page for Svelte RadioGroup component",
  keywords: ['radio', 'component', 'test', 'svelte']
};
---

<Layout meta={meta}>
  <div class="container mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold mb-8">Svelte RadioGroup Component Test</h1>
    
    <div>
      <div class="p-4 border rounded-md bg-slate-50">
        <SvelteRadioGroupTest client:load />
      </div>
    </div>
    
    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Component Details</h2>
      <div class="prose prose-slate max-w-none">
        <p>This page tests the RadioGroup component implementation in Svelte. The component should:</p>
        <ul class="list-disc pl-5">
          <li>Display radio options with proper styling and focus states</li>
          <li>Update selection when clicked</li>
          <li>Update when external value changes (via the buttons below the group)</li>
          <li>Properly show the selected value</li>
        </ul>
      </div>
    </div>
    
    <div class="mt-8 flex justify-center">
      <a href="/component-test" class="px-4 py-2 bg-gray-200 rounded-md hover:bg-gray-300 transition-colors">
        Back to All Components
      </a>
    </div>
  </div>
</Layout> 