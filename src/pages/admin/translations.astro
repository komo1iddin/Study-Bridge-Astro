---
import TranslationEditor from '@/components/admin/TranslationEditor.astro';
import { getLangFromUrl, type Lang } from '@/i18n/langUtils';

// Get the preferred languages from the URL parameters
const { searchParams } = Astro.url;
const sourceLang = (searchParams.get('source') as Lang) || undefined;
const targetLang = (searchParams.get('target') as Lang) || undefined;

// Page title
const title = 'Translation Management';
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - Admin</title>
  <meta name="robots" content="noindex, nofollow">
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.6;
      color: #111827;
      background-color: #f3f4f6;
      margin: 0;
      padding: 0;
    }
    
    .admin-layout {
      display: flex;
      min-height: 100vh;
    }
    
    .admin-sidebar {
      width: 240px;
      background-color: #1f2937;
      color: white;
      padding: 1.5rem 1rem;
    }
    
    .admin-logo {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 2rem;
    }
    
    .admin-nav {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .admin-nav li {
      margin-bottom: 0.5rem;
    }
    
    .admin-nav a {
      display: block;
      padding: 0.5rem 0.75rem;
      color: #d1d5db;
      text-decoration: none;
      border-radius: 0.375rem;
      transition: background-color 0.2s;
    }
    
    .admin-nav a:hover {
      background-color: #374151;
    }
    
    .admin-nav a.active {
      background-color: #3b82f6;
      color: white;
    }
    
    .admin-content {
      flex: 1;
      padding: 2rem;
    }
    
    .admin-header {
      margin-bottom: 2rem;
    }
    
    .admin-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .breadcrumbs {
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .breadcrumbs a {
      color: #3b82f6;
      text-decoration: none;
    }
    
    .breadcrumbs a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="admin-layout">
    <aside class="admin-sidebar">
      <div class="admin-logo">AstroStudy Admin</div>
      
      <nav>
        <ul class="admin-nav">
          <li><a href="/admin/dashboard">Dashboard</a></li>
          <li><a href="/admin/translations" class="active">Translations</a></li>
          <li><a href="/admin/content">Content</a></li>
          <li><a href="/admin/users">Users</a></li>
          <li><a href="/admin/settings">Settings</a></li>
        </ul>
      </nav>
    </aside>
    
    <main class="admin-content">
      <header class="admin-header">
        <h1 class="admin-title">{title}</h1>
        <div class="breadcrumbs">
          <a href="/admin/dashboard">Admin</a> / {title}
        </div>
      </header>
      
      <TranslationEditor sourceLang={sourceLang} targetLang={targetLang} />
    </main>
  </div>
</body>
</html> 