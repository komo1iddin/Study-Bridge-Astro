---
import MissionStats from '@/components/features/home/MissionStats.astro';
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MissionStats Component Example</title>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="p-4">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">MissionStats Component Examples</h1>
    
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Default (Uzbek)</h2>
      <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
        <MissionStats />
      </div>
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4">English</h2>
      <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
        <MissionStats lang="en" />
      </div>
    </div>
    
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4">Russian</h2>
      <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
        <MissionStats lang="ru" />
      </div>
    </div>
  </div>
</body>
</html> 