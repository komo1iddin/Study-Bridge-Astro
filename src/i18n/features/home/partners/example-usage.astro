---
// Example of how to use the new translation system in OurPartners.astro
import OurPartnersComponent from '@/components/features/home/OurPartners/OurPartners.svelte';
import { getPartnersTranslations } from '@/i18n/features/home/partners';
import type { Lang } from '@/i18n/langUtils';

interface Props {
  lang?: Lang;
}

const { lang = 'uz' } = Astro.props;

// Get all translations for this component at once
const translations = getPartnersTranslations(lang);
---

<!-- In a real component, ensure the Svelte component has the correct props defined -->
<OurPartnersComponent 
  client:visible 
  translations={translations} 
  lang={lang} 
/> 