---
// Example of how to use the new translation system in SuccessPath.astro
import SuccessPathComponent from '@/components/features/home/SuccessPath/SuccessPath.svelte';
import { getSuccessPathTranslations } from '@/i18n/features/home/successPath';
import type { Lang } from '@/i18n/langUtils';

interface Props {
  lang?: Lang;
}

const { lang = 'uz' } = Astro.props;

// Get all translations for this component at once
const translations = getSuccessPathTranslations(lang);
---

<!-- In a real component, ensure the Svelte component has the correct props defined -->
<SuccessPathComponent 
  client:visible 
  translations={translations} 
  lang={lang} 
/>